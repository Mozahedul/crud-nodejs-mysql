<%- include('../partials/header.ejs'); %>

<div class="container">
    <div class="col s12">
        <a href="/event/add" class="btn btn-success btn-lg">Add a new event</a>
    </div>
</div>

<div class="container mt-4">
    <% if (serverSuccess.length > 0) { %>
    <div class="alert alert-success"><%= serverSuccess %> </div>
    <% } %>
</div>

<div class="container mt-5">
    <% if (items.length > 0) { %>
    <table class="table table-striped table-bordered">
        <thead class="thead-inverse">
            <tr>
                <th>Serial No</th>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Locations</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach((item, index) => { %>
            <tr>
                <td scope="row"><%= index + 1 %> </td>
                <td><%= item.id %> </td>
                <td><%= item.name %> </td>
                <td><%= item.e_desc %> </td>
                <td><%= item.e_location %> </td>
                <td><a href="/event/edit/<%= item.id %> " class="btn btn-success btn-sm">Edit</a>
                    <a href="/event/delete/<%= item.id %> " class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% } else { %>
    <p>There is no record in the database</p>
    <% } %>
</div>

<% include('../partials/footer.ejs'); %>