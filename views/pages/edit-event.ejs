<%- include('../partials/header.ejs') %>

<h2 class="text-center">Edit Event</h2>
<div class="container mt-5 p-4" style="width: 440px; background-color: #f2f2f2">
  <div class="pb-4">
    <a href="/" class="btn btn-primary float-right btn-sm">View Event</a>
  </div>
  <form action="/event/update/<%= items[0].id %>" method="POST">
    <input type="hidden" name="id" value="<%= items[0].id %> " />
    <div class="form-group">
      <label class="form-label" for="name">Name</label>
      <input
        type="text"
        class="form-control"
        name="name"
        id="name"
        aria-describedby="helpId"
        placeholder="Input Name"
        value="<%= items[0].name %> "
      />
    </div>

    <div class="form-group">
      <label class="form-label" for="start_date">Start Date</label>
      <input
        type="text"
        class="form-control"
        name="start_date"
        id="start_date"
        aria-describedby="helpId"
        value="<%= items[0].start_date %> "
      />
    </div>

    <div class="form-group">
      <label class="form-label" for="end_date">End Date</label>
      <input
        type="text"
        class="form-control"
        name="end_date"
        id="end_date"
        aria-describedby="helpId"
        value="<%= items[0].end_date %> "
      />
    </div>

    <div class="form-group">
      <label class="form-label" for="e_desc">Description</label>
      <textarea class="form-control" name="e_desc" id="e_desc" rows="2">
<%= items[0].e_desc %></textarea
      >
    </div>

    <div class="form-group">
      <label class="form-label" for="e_location">Location</label>
      <textarea class="form-control" name="e_location" id="e_location" rows="2">
<%= items[0].e_location %></textarea
      >
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-block" name="submit">
        Update Event
      </button>
    </div>
  </form>
</div>

<%- include('../partials/footer.ejs') %>
